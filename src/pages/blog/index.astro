---
import ContainerLayout from '../../layouts/ContainerLayout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<ContainerLayout>
	<h1 class="mb-3 text-5xl font-semibold" transition:name="h1" transition:animate="initial">
		Blog
	</h1>
	<p class="mb-6">
		I share notes and thoughts. Mostly a place for me to Implement the Feynman Technique:
	</p>
	<section>
		<ul class="divide-y divide-stone-700 border-y border-stone-700">
			{
				posts.map((post) => (
					<li class="py-2 transition hover:bg-stone-900">
						<a href={`/blog/${post.slug}/`}>
							<div class="flex flex-row justify-between align-top">
								<h3 class="white font-mono text-2xl">{post.data.title}</h3>
								<p class="min-w-fit pl-1 text-xs text-stone-400">
									<FormattedDate date={post.data.pubDate} />
								</p>
							</div>
							<p class="mt-1 text-stone-400">{post.data.description}</p>
						</a>
					</li>
				))
			}
		</ul>
	</section>
</ContainerLayout>
