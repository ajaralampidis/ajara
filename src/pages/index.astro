---
import BaseLayout from '../layouts/BaseLayout.astro';
import Cube from '../components/home/Cube.astro';
import { Image } from 'astro:assets';
import ProfilePic from '../assets/home/perfil.jpg';
---

<BaseLayout>
	<div class="bg-orange-700 -mt-12 grow custom-bg">
		<div class="mx-auto block w-fit">
			<Cube />
		</div>
		<div class="text-center -mt-20 w-screen absolute bottom-0 h-[64vh]">
			<Image
				class="mix-blend-multiply mx-auto w-auto h-full"
				src={ProfilePic}
				alt="A pictor of me looking up (to the 3D cube)"
			/>
		</div>
		<nav class="flex flex-col w-fit m-auto relative mt-[33vh] font-mono mb-4">
			<a
				href="/blog"
				class="before:content-['>_'] hover:bg-orange-700 px-1 focus:bg-orange-700 transition"
				id="aboutMe"
				>Blog
			</a>

			<a
				href="/about"
				class="before:content-['>_'] hover:bg-orange-700 px-1 focus:bg-orange-700 transition"
				id="aboutMe"
			>
				About</a
			>

			<a
				href="/assets/cv"
				class="before:content-['>_'] hover:bg-orange-700 px-1 focus:bg-orange-700 transition"
				download
				class="navElement"
				id="webDevCV"
			>
				Resume<svg
					class="inline pb-1"
					xmlns="http://www.w3.org/2000/svg"
					width="25"
					height="25"
					viewBox="0 0 24 24"
					><path
						fill="currentColor"
						d="m12 16l-5-5l1.4-1.45l2.6 2.6V4h2v8.15l2.6-2.6L17 11zm-6 4q-.825 0-1.412-.587T4 18v-3h2v3h12v-3h2v3q0 .825-.587 1.413T18 20z"
					></path></svg
				>
			</a>

			<button
				class="before:content-['>_'] hover:bg-orange-700 px-1 focus:bg-orange-700 transition block md:hidden"
				id="arButton"
				tabindex="0"
				title="Only for devices that supports AR"
			>
				Augment Reality
			</button>
		</nav>
	</div>
	<style>
		@media screen and (min-width: 1024px) {
			.onlyMobile {
				display: none;
			}
		}
		.custom-bg {
			background: radial-gradient(
				circle,
				rgba(234, 88, 12, var(--tw-bg-opacity)) 7%,
				rgb(194, 65, 12, var(--tw-bg-opacity)) 25%,
				rgba(41, 37, 36, var(--tw-bg-opacity)) 90%
			);
		}
	</style>
</BaseLayout>
