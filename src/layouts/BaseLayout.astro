---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import SEOHead from '../components/layout/SEOHead.astro';
import { ViewTransitions } from 'astro:transitions';

export interface Props {
	title?: string;
	description?: string;
	image?: string;
}

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<ViewTransitions />
		<SEOHead
			title={title}
			description={description}
			image={image}
			transition:persist
			transition:name="head"
		/>
	</head>
	<body class="flex min-h-screen flex-col pt-4 max-md:pb-24 md:pt-0">
		<Header transition:persist transition:name="header" />
		<slot />
		<Footer transition:persist transition:name="footer" />
	</body>
</html>
