<div class="modelContainer">
	<script
		type="module"
		src="https://ajax.googleapis.com/ajax/libs/model-viewer/3.3.0/model-viewer.min.js"></script>
	<model-viewer
		id="prismModel"
		class="prismModel"
		src="assets/cube/cube.glb"
		ios-src="assets/cube/cube.usdz"
		alt="Developer, Designer, 3D enthusiast, Artist, Industrial Designer"
		environment-image="neutral"
		exposure="0.45"
		minimumRenderScale="1"
		poster="assets/cube/cubePoster.png"
		seamless-poster
		loading="eager"
		default-progress-mask
		auto-rotate
		auto-rotate-delay="10000"
		rotation-per-second="110%"
		max-camera-orbit="auto 360deg auto"
		camera-orbit="-90deg 100deg auto"
		camera-controls
		ar
		ar-modes="webxr scene-viewer quick-look"
		xr-environment
	>
	</model-viewer>
</div>

<style>
	.modelContainer {
		margin: auto;
		display: inline-block;
		/* background-color: orangered; */
		width: 40vh;
		height: 40vh;
	}

	#prismModel {
		width: 40vh;
		height: 40vh;
	}

	model-viewer {
		--poster-color: transparent;
	}

	model-viewer::part(default-progress-mask) {
		display: none;
	}

	model-viewer::part(default-ar-button) {
		display: none;
	}
</style>
